script OldaleTown_PokemonCenter_1F_EventScript_Merchant {
    lock
    faceplayer
    message("How can I help you?")
    waitmessage
    pokemart(OldaleTown_Center_Item_Mart)
    message("Come again soon!")
    release
    end
}

